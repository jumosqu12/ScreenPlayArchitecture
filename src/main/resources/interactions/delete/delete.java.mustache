package {{package}}.interactions;

import net.serenitybdd.screenplay.Actor;
import net.serenitybdd.annotations.Step;
import static net.serenitybdd.screenplay.Task.instrumented;
import net.serenitybdd.screenplay.rest.abilities.CallAnApi.as;

public class Delete extends RestInteraction {

    private final String resource;

    private Delete(String resource) {
        this.resource = resource;
    }

    @Step("{0} execute a PUT on the resource #resource")
    @Override
    public <T extends Actor> void performAs(T actor) { rest().log().all().delete(as(actor).resolve(resource)).then().log().all(); }

    public static Delete from(String resource) { return instrumented(Delete.class, resource); }

}